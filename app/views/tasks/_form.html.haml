.container
	.row
	= form_for @task, remote: true do |t|
		= t.hidden_field :category_id, value: Category.last.id
		%br
		= t.label :name
		= t.text_field :name, class: "new_field"
		%br
		= t.label :description
		= t.text_area :description, class: "new_field"
		%br
		= t.label :do_by_datetime
		= t.datetime_select :do_by_datetime, ampm: true, default: 24.hours.from_now, minute_step: 15
		%br
		= t.label "Urgent?"
		= t.select :urgency, [['Yes', true], ['No', false]]
		%br
		= t.label "Important?"
		= t.select :importance, [['Yes', true], ['No', false]]
		%br
		= t.submit "Create Task", class: "btn btn-success", id: 'create-task'
		#close.btn.btn-danger
			Cancel

				